<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Import Wizard View -->
    <record id="view_import_excel_wizard" model="ir.ui.view">
        <field name="name">import.excel.wizard.form</field>
        <field name="model">hr.payslip.input.import.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="date" 
                               options="{'datepicker': {'format': 'MM/YYYY'}}"
                               help="Select the target month for all imported inputs"/>
                        <field name="excel_file" filename="filename" 
                               widget="binary" 
                               options="{'accepted_file_extensions': '.xlsx,.xls'}"/>
                        <field name="filename" invisible="1"/>
                    </group>
                    <div class="alert alert-info" role="alert">
                        <strong>Excel Format (with headers):</strong>
                        <table class="table table-sm table-bordered mt-2" style="width: auto;">
                            <thead>
                                <tr>
                                    <th>Employee</th>
                                    <th>Input Type</th>
                                    <th>Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>John Doe</td>
                                    <td>Transport Deduction</td>
                                    <td>150.00</td>
                                </tr>
                                <tr>
                                    <td>John Doe</td>
                                    <td>Vehicle Allowance</td>
                                    <td>500.00</td>
                                </tr>
                                <tr>
                                    <td>Jane Smith</td>
                                    <td>Transport Deduction</td>
                                    <td>200.00</td>
                                </tr>
                            </tbody>
                        </table>
                        <ul class="mt-2">
                            <li>Input Type can be the exact name or code</li>
                            <li>One row per employee-input type combination</li>
                            <li>Supported formats: .xlsx, .xls</li>
                        </ul>
                    </div>
                </sheet>
                <footer>
                    <button name="action_import" type="object" string="Import" class="oe_highlight"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Standalone Action for Import Wizard -->
    <record id="action_import_excel_wizard_standalone" model="ir.actions.act_window">
        <field name="name">Import Bulk Inputs</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.payslip.input.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Add Import button in tree view -->
    <record id="view_hr_payslip_bulk_input_tree" model="ir.ui.view">
        <field name="name">hr.payslip.bulk.input.tree</field>
        <field name="model">hr.payslip.bulk.input</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'draft'" decoration-muted="state == 'cancelled'">
                <field name="name"/>
                <field name="date"/>
                <field name="input_type_id"/>
                <field name="total_employees"/>
                <field name="total_amount"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Keep other views from previous implementation -->
    <!-- Form View -->
    <record id="view_hr_payslip_bulk_input_form" model="ir.ui.view">
        <field name="name">hr.payslip.bulk.input.form</field>
        <field name="model">hr.payslip.bulk.input</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" 
                        statusbar_visible="draft,confirmed,cancelled"
                        options="{'clickable': '1'}"/>

                    <button name="action_confirm"
                            type="object"
                            string="Confirm"
                            class="oe_highlight"
                            modifiers="{'invisible': [['state', '!=', 'draft']]}"/>

                    <button name="action_draft"
                            type="object"
                            string="Reset to Draft"
                            modifiers="{'invisible': [['state', '!=', 'cancelled']]}"/>

                    <button name="action_cancel"
                            type="object"
                            string="Cancel"
                            modifiers="{'invisible': [['state', 'not in', ['draft','confirmed']]]}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="e.g., January 2025 Transport Deductions"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date" widget="date" options="{'datepicker': {'format': 'MM/YYYY'}}"/>
                            <field name="input_type_id" 
                                   options="{'no_create': False, 'no_create_edit': False}"
                                   domain="[('code', '!=', False)]"
                                   context="{'form_view_ref': 'hr_payroll.hr_payslip_input_type_view_form'}"/>
                        </group>
                        <group>
                            <field name="total_employees"/>
                            <field name="total_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Employee Lines">
                            <field name="line_ids" mode="tree,kanban">
                                <tree editable="bottom">
                                    <field name="employee_id" widget="many2one"/>
                                    <field name="amount" sum="Total Amount"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="employee_id"/>
                                        <field name="amount"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="Help">
                            <div class="alert alert-info" role="alert">
                                <h4>How to Use This Module</h4>
                                <ol>
                                    <li>First, create Salary Rules linked to Input Types in Payroll → Configuration → Salary Rules</li>
                                    <li>Use the <strong>Import Bulk Inputs</strong> menu to import multiple input types from Excel</li>
                                    <li>Or create individual bulk input records for a single input type</li>
                                    <li>Confirm records to make them appear in payslips</li>
                                </ol>
                            </div>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for Main View -->
    <record id="action_hr_payslip_bulk_input" model="ir.actions.act_window">
        <field name="name">Bulk Payslip Inputs</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.payslip.bulk.input</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first bulk input entry
            </p>
            <p>
                Use this module to manage payroll inputs for multiple employees at once.
                <br/>
                For multiple input types, use the Import Bulk Inputs wizard.
            </p>
        </field>
    </record>
</odoo>